{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitThis":true,
        "noImplicitReturns":true,
        "noUnusedLocals":true,
        "noUnusedParameters":true,
        "noImplicitAny":true,
        "strictNullChecks":true,
        "strictFunctionTypes":true,
        "strictPropertyInitialization":true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "./build/",
        "sourceMap": false,
        "lib": [
            "es6",
            "dom"
          ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}